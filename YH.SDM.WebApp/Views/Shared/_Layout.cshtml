        // vue 嵌套挂载，有数据，问题，所以这用JQ 绑定一下数据 Layout 不适合用uve


        function GetLoginUser() {

            var _self = {};

            axios({
                method: 'post',
                url: '/Home/GetLoginUser'

            }).then((response) => {

                let res = response.data;

                if (!res.Success) {
                    alert_info(res.Message);
                    return;
                }

                _self.userId = res.Content.userId;
                _self.userName = res.Content.userName;
                _self.sex = res.Content.sex;
                _self.workId = res.Content.workId;

                $(".username").html(_self.userName + " [" + _self.workId + "]");

                let imgurl = "/AdminLte/img/user2-160x160.jpg";

                if (_self.sex == 1) {
                    imgurl = "/AdminLte/img/user4-128x128.jpg"
                }

                $("#img_toplogo").attr("src", imgurl)
                $("#img_rightlogo").attr("src", imgurl)
                $("#image_leftlogo").attr("src", imgurl)


            }).catch((err) => {

                console.log(err);

            });

        }

    </script>


