
@section Pageheader{
    <h1>
        <small> 文档管理 </small>

    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">Document</li>
    </ol>

}


@section Htmlhead{

    <!--加载ElementUi组件-->

    <link href="~/lib/element-ui/theme-chalk/index.css" rel="stylesheet" />
    <script src="~/lib/element-ui/index.js"></script>
    <script src="~/lib/element-ui/locale/zh-CN.js"></script>


    <style>


        .tree_menu {
            position: fixed;
            display: block;
            z-index: 20000;
            background-color: #fff;
            padding: 5px 0;
            border: 1px solid #ebeef5;
            border-radius: 4px;
            box-shadow: 0 2px 12px 0 rgba(0,0,0,.1);
        }

            .tree_menu ul {
                margin: 0;
                padding: 0;
            }

                .tree_menu ul li {
                    list-style: none;
                    margin: 0;
                    padding: 0 15px;
                    font-size: 14px;
                    line-height: 30px;
                    cursor: pointer;
                }

                    .tree_menu ul li:hover {
                        background-color: #ebeef5
                    }
    </style>



}


<section class="content" id="tab">
    <div class="row">

        <!-- /.col -->
        <div class="col-md-3"  >
            <div class="box box-primary">
                <div class="box-header">
                    <h3 class="box-title">目录</h3>

                    <div class="box-tools">

                        <div class="input-group input-group-sm  col-md-1 pull-right ml-1" style="margin-left:10px;">
                            <button type="button" class="btn btn-xs pull-right bg-blue" @@click="AddDir()" id="btn_Search">新建文件夹</button>
                        </div>

                    </div>
                </div>
                <!-- /.box-header -->
                <div class="box-body table-responsive no-padding" >
                
                        <el-tree :data="dirlist"
                                 :props="defaultProps"
                                 node-key="id"
                                 @@node-click="handleNodeClick"
                                 @@node-contextmenu="rightClick"></el-tree>

                        <div id="perTreeMenu" v-if="tmDisplay" class="tree_menu" :style="{...rightMenu}">
                            <ul>
                                <li @@click="AddDir()">
                                    <i class="el-icon-tickets"></i> 新建
                                </li>
                                <li @@click="UpdateDir()">
                                    <i class="el-icon-edit"></i> 编辑
                                </li>
                                <li @@click="DelDir()">
                                    <i class="el-icon-delete"></i> 删除
                                </li>
                            </ul>
                        </div>
                 

                </div>
                <!-- /.box-body -->


                <div class="box-footer no-padding">
                    <div class="card-footer clearfix pull-left" style="margin-left:20px;margin-top:30px;margin-bottom:30px">

                    </div>



                    <!-- /.pull-right -->
                </div>
            </div>
        </div>




        <!-- /.col -->
        <div class="col-md-9">
            <div class="box box-success">
                <div class="box-header">
                    <h3 class="box-title">{{checkDir.Dir_Name}}</h3>

                    <div class="box-tools">


                    </div>
                </div>
                <!-- /.box-header -->
                <div class="box-body table-responsive no-padding">



                </div>
                <!-- /.box-body -->


                <div class="box-footer no-padding">
                    <div class="card-footer clearfix pull-left" style="margin-left:20px;margin-top:30px;margin-bottom:30px">

                    </div>

                    <div class="card-footer clearfix pull-right " style="margin-right:30px;margin-top:30px;margin-bottom:30px" id="div_page">

                        <ul class="pagination pagination-sm no-margin pull-right" id="ul_page">
                        </ul>
                    </div>


                    <!-- /.pull-right -->
                </div>
            </div>
        </div>


    </div>





    <div class="modal fade" id="modal-default">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <h4 class="modal-title" id="txt_username">角色信息</h4>
                </div>
                <div class="modal-body">




                </div>
                <div class="modal-footer">

                </div>
            </div>
            <!-- /.modal-content -->
        </div>
    </div>





</section>



@section scripts{

    <script>

        var self;

        var vm = new Vue({
            el: "#tab",
            data: {
                dirlist: [],
                fileList: [],

                keywork: "",

                checkDir: {},   //当前选中的文件夹节点
                tmDisplay: false,
                defaultProps: {
                    children: 'Childs',
                    label: 'Dir_Name'
                }
            },
            created: function () {
                self = this;

                this.InitDir();
            },
            mounted() {
                this.EnterKeyup();
            },
            methods: {


                Query() {


                },

                InitDir() {

                    AjaxPost({
                        url: "/DocumentUpload/ListDirByTree",
                        data: {

                        },
                        success: function (result) {

                            console.log(result);

                            if (!result.Success) {
                                alert_info(result.Message);
                                return;
                            }

                            self.dirlist = result.Content;

                        }
                    })
                },

                AddDir() {
                    //添加文件夹
                
                    bootbox.prompt({
                        size: "small",
                        title: "请输入文件夹名称:",
                        centerVertical: true,
                        callback: function (res) {

                            if (res == null) {
                                return;
                            }

                            var model = {};
                            model.dir_name = res;

                            console.log("self.checkDir", self.checkDir, "Object.keys(self.checkDir)", Object.keys(self.checkDir).length);
                            if (Object.keys(self.checkDir).length <= 0) {
                                //如果 没有选中任何文件夹则添加在根节点
                                model.ParentId = 0;
                            } else {
                                //在选中的 子节点下添加节点
                                model.ParentId = self.checkDir.Id;
                            }



                            AjaxPost({
                                url: "/DocumentUpload/AddDir",
                                data: model,
                                success: function (result) {

                                    console.log(result);

                                    if (!result.Success) {
                                        alert_danger(result.Message);
                                        return;
                                    }
                                    self.InitDir();

                                }


                            });

                        }


                    })
               
                },

                DelDir() {


                    bootbox.confirm({
                        size: "small",
                        message: "您确定删除改文件夹吗?",
                        centerVertical: true,
                        callback: function (res) {

                            if (!res) {
                                return;
                            }

                            //删除文件夹
                            var dirId = self.checkDir.Id;

                            AjaxPost({
                                url: "/DocumentUpload/DelDir",
                                data: { id: dirId },
                                success: function (result) {

                                    console.log(result);

                                    if (!result.Success) {
                                        alert_danger(result.Message);
                                        return;
                                    }
                                    self.InitDir();

                                }
                            });

                        }

                    });

                },

                UpdateDir() {
                    //修改文件夹


                    bootbox.prompt({
                        size: "small",
                        title: "请输入文件夹名称:",
                        value: self.checkDir.Dir_Name ,
                        callback: function (res) {


                            if (res == null) {
                                return;
                            }

                            var model = self.checkDir;
                            model.Dir_Name = res;

                            AjaxPost({
                                url: "/DocumentUpload/UpdateDir",
                                data: model,
                                success: function (result) {

                                    console.log(result);

                                    if (!result.Success) {
                                        alert_danger(result.Message);
                                        return;
                                    }
                                    self.InitDir();

                                }
                            });

                        }
                    });



                },

                Search: function () {
                    this.Query();
                },

                EnterKeyup() {

                    document.onkeypress = function (e) {
                        var keycode = document.all ? event.keyCode : e.which;

                        if (keycode == 13) {
                            self.Query();
                            return false;
                        }
                    };
                },

                handleNodeClick(data) {
                    console.log(data);
                    self.checkDir = data;
                },
                rightClick(e, data, node, comp) {
                    //设置右键菜单

                    // console.log('e:', e, 'data', data, "node", node);

                    self.checkDir = data;

                    this.rightMenu = { top: e.pageY + 'px', left: e.pageX + 'px' }
                    this.tmDisplay = true


                    document.onclick = function (ev) {
                        if (ev.target !== document.getElementById('perTreeMenu')) {
                            self.tmDisplay = false
                        }
                    }
                },


            }
        });




    </script>

}
