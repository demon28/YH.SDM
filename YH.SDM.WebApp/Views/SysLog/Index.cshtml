<section class="content" id="tab">
    <div class="row">
        <div class="box box-warning">
            <div class="box-body">
                <div class="row">
                    <div class="col-md-3">
                        <label class="col-md-3 control-label" style="margin-top:8px">开始时间:</label>
                        <div class="input-group date col-md-5">
                            <div class="input-group-addon">
                                <i class="fa fa-calendar"></i>
                            </div>
                            <input type="text" class="form-control pull-left" id="datepicker1" readonly>
