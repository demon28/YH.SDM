                                <option value="3">操作日志</option>
                            </select>
                        </div>
                        <div class="col-md-3">
                            <div class="input-group-btn">
                                <button type="button" class="btn btn-default " @@click="Search()" id="btn_Search" style="width:80px" ><i class="fa fa-search">查询</i></button>
                            </div>
                        </div>

                    </div>
                    </div>
            </div>
        </div>
            <!-- /.col -->
            <div>
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">List</h3>

                        @*<div class="box-tools">
                            
                            <div class="input-group input-group-sm  pull-right" style="margin-right:10px; width: 200px;">
                                <select class="form-control" v-model="keytype">
                                    <option value="0">全部</option>
                                    <option value="1">登录日志</option>
                                    <option value="2">系统异常</option>
                                </select>
                            </div>

                        </div>*@
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body table-responsive no-padding">
                        <table class="table table-hover">
                            <tbody>
                                <tr>
                                    <th>Id</th>
                                    <th>类型</th>
                                    <th>内容</th>
                                    <th>时间</th>

                                </tr>
                                <tr v-for="(item,index) in list">
                                    <td>{{item.Id}}</td>
                                    <td>
                                        <span class="label label-success" v-if="item.Type==1">用户登录</span>
                                        <span class="label label-danger" v-if="item.Type==2">系统异常</span>
                                        <span class="label label-warning" v-if="item.Type==3">操作日志</span>
                                    </td>

                                    <td>{{item.Content}}</td>
                                    <td>{{item.Createtime}}</td>

                                </tr>

                            </tbody>
                        </table>
                    </div>
                    <!-- /.box-body -->


                    <div class="box-footer no-padding">
                        <div class="card-footer clearfix pull-left" style="margin-left:20px;margin-top:30px;margin-bottom:30px">

                        </div>

                        <div class="card-footer clearfix pull-right " style="margin-right:30px;margin-top:30px;margin-bottom:30px" id="div_page">

                            <zpagenav v-bind:page="pageModel.pageIndex" v-bind:page-size="pageModel.pageSize" v-bind:total="pageModel.TotalCount"
                                      v-bind:max-page="pageModel.ToTalPage" v-on:pagehandler="Init">
                            </zpagenav>

                        </div>


                        <!-- /.pull-right -->
                    </div>
                </div>
            </div>

        </div>
        <!-- /.col -->
        <!-- /.row -->
        <!-- /.modal-dialog -->


</section>

@section scripts{




    <script>





        var self;
        var vm = new Vue({
            el: "#tab",
            data: {
                list: [],
                pageModel: {
                    pageIndex: 1,
                    pageSize: 15,
                    TotalCount: 0,
                    ToTalPage: 0,
                },

                 keytype: 0,
                keywork: "",
                keybegindate: "",
                 keyenddate:null
             

             
            },
            created: function () {
                self = this;

                this.Init(1);
            },
            mounted() {
                this.EnterKeyup();
                //Date picker
                $('#datepicker1').datepicker({
                    autoclose: true
                });
                $('#datepicker2').datepicker({
                    autoclose: true
                });
                $('#datepicker1').change(function (e) {
                   // console.log("=======",e);

                    var date = $("#datepicker1").val();
                    self.keybegindate = date;
                });
                $('#datepicker2').change(function (e) {
                    // console.log("=======",e);

                    var date = $("#datepicker2").val();
                    self.keyenddate = date;
                });
            },
            methods: {

                Init: function (index) {

                    console.log("日志类型=========", self.keydate);

                    AjaxPost({
                        url: "/SysLog/List",
                        data: {
                            pageIndex: index,
                            pageSize: self.pageModel.pageSize,
                            keyword: self.keywork,
                            keytype: self.keytype,
                            keybegindate: self.keybegindate,
                            keyenddate: self.keyenddate,
                        },
                        success: function (result) {

                            console.log(result);

                            if (!result.Success) {
                                alert_info(result.Message);
                            }

                            self.list = result.Content;

                            self.pageModel.pageIndex = result.PageIndex;
                            self.pageModel.pageSize = result.PageSize;
                            self.pageModel.TotalCount = result.TotalCount;
                            self.pageModel.ToTalPage = result.ToTalPage;
                        }
                    })
                },
                Search: function () {
                    this.Init(1);
                },
                EnterKeyup() {
                 
                    document.onkeypress = function (e) {
                        var keycode = document.all ? event.keyCode : e.which;

                        if (keycode == 13) {
                            self.Init(1);
                            return false;
                        }
                    };
                },


            }
        });







    </script>











}